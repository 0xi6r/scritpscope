{
  "manifest_version": 3,
  "name": "ScriptScope",
  "version": "1.0.0",
  "description": "Capture, prettify, and analyze JavaScript files for security vulnerabilities and secrets",
  "permissions": [
    "sidePanel",
    "activeTab",
    "scripting",
    "webNavigation",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background/index.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Toggle ScriptScope"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/utils/scanner.worker.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
